    <footer>
      <Toolbar>
        <ToolbarSpacer/>
        <Button
          text="{i18n>btn.create.chemicalComp}"
          tooltip="{i18n>btn.create.chemicalComp}"
          type="Emphasized"
          icon="sap-icon://add"
