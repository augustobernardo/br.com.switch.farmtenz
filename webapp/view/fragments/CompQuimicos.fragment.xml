<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core">


  <Page id="page_comp_qui" showHeader="false" class="sapUiResponsiveContentPadding">

    <content>
      <VBox id="vbox_comp_qui_content">

        <VBox id="vbox_title" class="sapUiMediumMarginBottom sapUiTinyMarginBegin">
          <Title
            text="{i18n>sideBar.chemicalComponents}"
            level="H3"
            titleStyle="H3"
            class="sapUiSmallMarginTopBottom"/>
        </VBox>
      </VBox>


      <Table 
        id="table_comp_qui"
        items="{homeView>/TableCompQui/Items}"
        noDataText="{i18n>table.noData.chemicalComp}">

          <headerToolbar>
            <OverflowToolbar>
              <Title text="{i18n>table.title.chemicalComp}" level="H2"/>

              <ToolbarSpacer/>

              <Button
                tooltip="{i18n>btn.sort.table}"
                icon="sap-icon://sort"
                press="handleSortButtonPressed"/>

              <SearchField
                placeholder="{i18n>searchField.placeholder}"
                id="searchField"
                liveChange=".onLCFilterGlobalCompQui"
                width="auto"
                search=".onFilterCompQui" />

            </OverflowToolbar>
          </headerToolbar>

          <infoToolbar>
            <OverflowToolbar id="infot_toolbar_comp_qui" visible="false">
              <Text id="infot_toolbar_comp_qui_label" />
            </OverflowToolbar>
          </infoToolbar>

          <columns>
            <Column>
              <Text text="{i18n>table.column.chemicalComp.name}"/>
            </Column>
            <Column>
              <Text text="{i18n>table.column.chemicalComp.formula}"/>
            </Column>
            <Column>
              <Text text="{i18n>table.column.chemicalComp.formaMedida}"/>
            </Column>
          </columns>

          <items>
            <ColumnListItem>
              <cells>
                <Text text="{homeView>NomeCompQui}"/>
                <Text text="{homeView>FormulaCompQui}"/>
                <Text text="{homeView>FormaMedidaCompQui}"/>
              </cells>
            </ColumnListItem>
          </items>
      </Table>

